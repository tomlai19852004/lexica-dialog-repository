{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "declaration": true,
      "outDir": "dist"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
  